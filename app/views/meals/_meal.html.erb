<p>
	<span class="content">
	<% @foods.each do |food| %>
	 <% if food.id == meal.food_id %></span>
</p>
	<tr>
		<% times = ["in the morning", "in the afternoon", "during the evening", "at night"] %>
		<%= time_ago_in_words(meal.day) %> ago, <%= times[meal.time_of_day.to_i - 1] %>, you ate: 
	</tr>
	<tr>
		<td>
			Food Name
		</td>
		<td>
			Price
		</td>
		<td>
			Location
		</td>
		<td>
			Portion
		</td>
		<td>
			Portion type
		</td>
		<td>
			Calories
		</td>
		<td>
			Sat Fat
		</td>
	</tr>
	<tr>
		<td>
			<%= food.name %>
		</td>
		<td>
			<%= number_to_currency(meal.price, :unit => "$") %>
		</td>
		<td>
			<% locations = ["The Diner", "South Campus Diner", "Denton", "Shops", "Off-Campus"] %>
			<%= locations[meal.location.to_i - 1] %>
		</td>
		<td>
			<%= meal.serving_size %>
		</td>
		<td>
			<%= food.portion_display_name %>
		</td>
		<td>
			<%= food.calories %>
		</td>
		<td>
			<%= food.saturated_fats %>
		</td>
	</tr>
<% end %>
<% end %>

