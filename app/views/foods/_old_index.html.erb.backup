<h1>Foods</h1>

<form action="<%= foods_path %>" method="get" >
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
</form>

<h3>Search results</h3>
<ul>
<% @foods.each do |food| %>
    <li><%= food.name %>:  <%= food.portion_default %> <%= food.portion_display_name %>,  <%= food.calories %> cal, <%= food.saturated_fats %> g sat. fats. id: <%= food.food_id %></td>
    <p>***: <%= Food.find(food.id).name %></p>
<% end %>
</ul>
